<h1>Listing content_areas</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Department</th>
    <th>Creator</th>
    <th>Locked</th>
    <th></th>
    <th></th>
  </tr>

<% @content_areas.each do |content_area| %>
  <tr>
    <td><%= content_area.name %></td>
    <td><%= content_area.department.name %></td>
    <td><%= content_area.creator.username %></td>
    <td><%= content_area.locked %></td>
    <td><%= link_to 'Show', content_area %></td>
    <td><%= link_to 'Edit', edit_content_area_path(content_area) %></td>
    <td><%= link_to 'Destroy', content_area, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

