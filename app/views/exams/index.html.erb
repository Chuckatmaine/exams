<h1>Listing exams</h1>

<table>
  <tr>
    <th>Title :</th>
    <th>Level :</th>
    <th>Creator :</th>
    <th>Course :</th>
    <th>Available :</th>
    <th>Question Count :</th>
    <th>Department :</th>
    <th>Start Date :</th>
    <th>End Date :</th>
  </tr>

<% @exams.each do |exam| %>
  <tr>
    <td><%= exam.title %></td>
    <td><%= exam.level %></td>
    <td><%= exam.creator.username %></td>
    <td><%= exam.course.name %></td>
    <td><%= exam.available %></td>
    <td><%= exam.question_count %></td>
    <td><%= exam.department.name %></td>
    <td><%= exam.start_date%></td>
    <td><%= exam.end_date %></td>
    <td><%= link_to 'Take exam', take_exam_path(exam) %></td>
    <% if current_user.faculty || current_user.admin %>
     <td><%= link_to 'Show', exam %></td>
     <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
     <td><%= link_to 'Destroy', exam, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Exam', new_exam_path %>
